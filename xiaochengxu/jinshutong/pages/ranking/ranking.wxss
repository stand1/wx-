/* pages/ranking/ranking.wxss */
.wapper{
  width: 100%;
  font-family: PingFangSC-Regular;
  font-size: 14px;
  color: #555555;
}
.conter{
  border-top:8px solid #FAFAFA;
}
.conter_header{
  margin: 0 20px;
  font-size: 12px;
  color: #B2B2B2;
  display: flex;
  justify-content: space-between;
  padding: 15px 0;
}
.header_name{
  font-size: 14px;
  color: #555555;
}
.conter_item_wapper{
  border-top:1px solid #f7f7f7;
}
.conter_item{
  margin: 0 20px;
  height: 50px;
  line-height: 50px;
  display: flex;
  justify-content: space-between;
}
.item_left{
  font-size: 14px;
  color: #555555;
  display: flex;
}
.item_img{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-top: 10rpx;
  margin-right: 30rpx;
}
.item_img image{
  width: 40px;
  height: 40px;
  border-radius: 50%;
}
.item_right{
  display: flex;
}
.item_right .txt{
  font-size: 24rpx;
  margin-right: 10rpx;
  color: #B2B2B2;
}
.item_right .img{
  width: 17rpx;
  height: 17rpx;
}
.item_right image{
  width: 17rpx;
  height: 17rpx;
}
.dfs{
  display: flex;
}