/* pages/modification/modification.wxss */
.wapper{
  font-family: PingFangSC-Regular;
  font-size: 32rpx;
  color: #555555;
  letter-spacing: 0;
  width: 100%;
  height: 100%;
  position: fixed;
  left: 0;
  top:0;
  box-sizing: border-box;
  background-color: #fafafa;
}
.wapper_content{
  box-sizing: border-box;
  background-color: #FFF;
}
.header{
  display: flex;
  justify-content: flex-end;
}
.header-left{
  margin-right: 30rpx;
}
.content{
  width: 100%;
  box-sizing: border-box;
  border-top: 16rpx solid #fafafa;
}
.content_wapper{
   height: 110rpx;
   line-height: 110rpx;
   display: flex;
   justify-content: space-between;
   border: 1px solid #F5F6F8;
   border-radius: 12rpx;
}
.content-left{
  display: flex;
  align-items: center;
  width: 80%;
}
.content-left input{
  padding-left: 20rpx;
  width: 100%;
}
.content-right,.content-right image{
   width: 40rpx;
   height: 40rpx;
   margin: 10rpx 30rpx 0 0;
}
.footer{
  width: 100%;
  display: flex;
  justify-content: center;
}
.footer_content{
  box-sizing: border-box;
  width: 90%;
  position: absolute;
  bottom:120rpx;
  left: 4.9%;
  text-align: center;
  height: 112rpx;
  line-height: 112rpx;
  color: #fff;
  margin-top: 80rpx;
  background-color: #5693FF;
  border: 1px solid #019DEA;
  border-radius: 8rpx;
}