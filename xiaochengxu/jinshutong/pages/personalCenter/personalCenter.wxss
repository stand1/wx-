/* pages/personalCenter/personalCenter.wxss */
.wapper{
  width: 100%;
  font-family: PingFangSC-Regular;
  font-size: 16px;
  color: #555555;
}
.conter{
  width: 100%;
  border-top:8px solid #fafafa;
}
.conter_header{
  margin: 0 20px;
  height: 70px;
  line-height: 70px;
  display: flex;
  justify-content: space-between;
}
 .header_left{ 
   height: 70px;
   display: flex;
   flex-direction: column;
} 
.header_left view{
   height: 35px;
   display: flex;
   align-items: center;
}
.header_left view.header_name{
  font-family: PingFangSC-Regular;
  font-size: 16px;
  color: #B2B2B2;
  letter-spacing: 0;
}
.header_right{
  width: 58px;
  height: 58px;
  border-radius: 50%;
  margin-top: 6px;
  background-color: #9e9e9e;
}
.header_right image{
  width: 58px;
  height: 58px;
  border-radius: 50%;
}
.header_right{
  width: 58px;
  height: 58px;
}
.header_item{
  width: 100%;
  border-top:1px solid #f7f7f7;
}
.header_item_wapper{
  margin: 0 20px;
  padding: 15px 0;
  display: flex;
  justify-content: space-between;
}
.item_right{
  display: flex;
}
.item_name{
  color: #B2B2B2;
  margin-right: 20px;
}
.item_img{
  width: 8.5px;
  height: 8.5px;
}
.item_img image{
  width: 8.5px;
  height: 8.5px;
}
.contenlist{
  width: 100%;
  font-size: 16px;
  color: #555555;  
  margin-bottom: 50px;
}
.contenlist_item{
  width: 100%;
  height: 48px;
  line-height: 48px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #f5f5f5;
  font-size: 16px;
}
.contenlist_item_left{
  margin-left: 20px;
}
.contenlist_item_right{
  margin-right: 20px;
}
.tubiao{
  width: 13px;
  height: 13px;
  margin-right: 10px;
}
.next{
  width: 8.5px;
  height: 8.5px;
}


