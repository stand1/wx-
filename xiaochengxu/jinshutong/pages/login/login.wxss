.wapper{
  font-family: PingFangSC-Regular;
  font-size: 14px;
  color: #555555;
  letter-spacing: 0;
  width: 100%;
  box-sizing: border-box;
}
.wapper_content{
  box-sizing: border-box;
}
.header{
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-top: 200rpx;
}
.header_img{
  width: 100%;
  display: flex;
  justify-content: center;
  margin: 40rpx 0;
}
.header_img image{
  width: 200rpx;
  height: 200rpx;
}
.header_txt{
  width: 100%;
  display: flex;
  justify-content: center;
  margin: 10rpx 0 40rpx;
}
.header_t{
  font-size: 22px;
  text-align: center;
}
.footer{
  display: flex;
  flex-direction: column;
  width: 100;
  margin-top: 100rpx;
}
.but_qr.but_qx{
  width: 100%;
  display: flex;
  justify-content: center;
}
.but_qx{
  padding-top:40rpx;
}
button{
  margin: 0 20px;
}