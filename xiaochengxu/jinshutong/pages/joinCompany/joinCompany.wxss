/* pages/joinCompany/joinCompany.wxss */
.header{
  margin:20px 0;
}
.txt{
  font-size: 20px;
  font-weight: 600;
  color: #555;
  margin-left: 20px;
}
.conten{
  width: 90%;
  margin: 0 20px;
  font-size: 14px;
  color: #555;
}
.inputItem{
  width: 100%;
  padding: 10px 0;
}
.inputItem label text{
  color: red;
}
.inputItem input{
  width: 100%;
  height: 40px;
  background-color: #eee;
  border-radius: 3px;
  margin-top: 10px;
}
.phcolor{
  padding-left: 10px;
  font-size: 16px;
}
.footer{
  font-family: PingFangSC-Medium;
  font-size: 14px;
  color: #555555;
  letter-spacing: 0;
  width: 100%;
  box-sizing: border-box;
}
.footer_content{
  height: 48px;
  line-height: 48px;
  display: flex;
  justify-content: flex-start;
  padding:0 20px;
  border-top:1px solid #fafafa;
}
.but{
  margin: 0 20px;
  background-color: #5693FF;
  color: #fff;
  border-radius: 5px;
}
.but button{
  background-color: #5693FF;
  color: #fff;
  border-radius: 5px;
}