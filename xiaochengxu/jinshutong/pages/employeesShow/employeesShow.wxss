/* pages/employeesShow/employeesShow.wxss */
.wapper{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  box-sizing: border-box;
  background-color: #090909;
  left: 0;
  overflow: hidden;
}
.content{
  width: 100%;
  height: 100%;
  overflow: hidden;
  position: fixed;
  top: 0;
  left: 0;
}
swiper, swiper-item{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: relative;
}
image{
  width: 100%;
  height: 100%;
}
.dianzan,.dianzan>image{
  width: 72rpx;
  height: 62rpx;
}
.dianzan{
  position: absolute;
  right: 36rpx;
  top:36rpx;
}
.txt{
  font-family: PingFangSC-Regular;
  position: absolute;
  bottom:0;
  left: 0;
  font-size: 14px;
  color: #fff;
  letter-spacing: 0;
  width: 100%;
  height: 71px;
  display: flex;
  justify-content: space-between;
  background-image: linear-gradient(-180deg, rgba(35,35,35,0.00) 6%, #232323 100%);
}
.txt text{
  font-size: 28rpx;
  color: #FFFFFF;
  box-sizing: border-box;
  width: 100%;
  padding: 0 44rpx;
}
.txt_right{
  text-align: right;
}