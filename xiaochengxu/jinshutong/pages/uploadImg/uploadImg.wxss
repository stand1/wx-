/* pages/uploadImg/uploadImg.wxss */
.wapper{
  width: 100%;
}
.conter{
  width: 100%;
  box-sizing: border-box;
  padding: 20px;
  border-top:8px solid #fafafa;
}
.pics{
  display: flex;
  justify-content: flex-start;
  flex-direction: row;
  flex-wrap: wrap;
}
.pics view{
  width: 33%;
}
.pics image{
  display: flex;
  width: 100%;
  height: 90px;
  margin-right: 2px; 
  background-color: #fff;
  margin-bottom: 10px;
}
.addImg{
  width: 30%;
  height: 120px;
  font-size: 60px;
  color: #F5F6F8;
  border: 1px dashed #666;
  display: flex;
  justify-content: center;
  align-items: center;
}


/* 模态框 */
.show-btn {
  margin-top: 100rpx;
  color: #22cc22;
}

.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
  width: 100%;
  height: 64%;
  overflow: hidden;
  position: fixed;
  top: 18%;
  left: 0;
  z-index: 9999;
  display: flex;
  justify-content: center;
  align-items: center;
}
.modal-content{
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.modal-content image{
   width: 100%;
}